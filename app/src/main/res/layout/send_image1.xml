<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C4000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <RelativeLayout
        android:id="@+id/Rx"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image" />
    <VideoView
        android:id="@+id/video_send1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="80dp"
        android:visibility="gone"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_message_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/btn_attach"
            android:layout_toLeftOf="@+id/btn_send"
            android:layout_marginLeft="5dp"
            android:background="@drawable/typetext"
            android:textIsSelectable="true"
            android:hint="Type a message"
            android:paddingRight="8dp"
            android:fontFamily="@font/happy_monkey"
            android:paddingLeft="15dp"
            android:drawablePadding="8dp"
            />


        <ImageButton
            android:id="@+id/btn_send"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/sendcircle"></ImageButton>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar7"
        style="?android:attr/progressBarStyle"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_centerInParent="true" />

</RelativeLayout>