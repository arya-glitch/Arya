<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_addpost"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:title="Add Post"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/arrowwhite"
        />

    <RelativeLayout
        android:id="@+id/RT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/R0"
        android:layout_marginTop="80dp"
        android:elevation="8dp"
        android:background="@drawable/bg7">








        <RelativeLayout
            android:id="@+id/R2"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            >
            <ImageView
                android:id="@+id/add_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/add_image"
                android:layout_centerInParent="true" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager2"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                />

            <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                android:id="@+id/dot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:dotsColor="#00B8D4"
                app:dotsSize="8dp"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:layout_below="@+id/viewpager2"
                android:visibility="gone"


                />


            <ImageView
                android:id="@+id/cross"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/crosscircle"
                android:visibility="gone"

                />

            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="gone"
                android:layout_centerInParent="true"/>



            <VideoView
                android:id="@+id/post_video"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"

                />
            <ImageView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/R1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R2"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/caption_post_option"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg3"
                android:fontFamily="@font/cherry_cream_soda"
                android:hint="Write Something....... "
                android:textSize="15sp"
                android:padding="8dp"

                />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/R4"
        android:layout_below="@+id/RT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/post_option_post_button"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="153dp"
            android:layout_marginLeft="153dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bg3"
            android:text="Share"
            android:fontFamily="@font/happy_monkey"
            android:textColor="#000000"
            android:textSize="18sp"
            android:elevation="10dp"/>

    </RelativeLayout>


</RelativeLayout>