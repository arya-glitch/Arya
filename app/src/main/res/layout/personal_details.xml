<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:title="Personal Details"
        android:navigationIcon="@drawable/arrow_back_black_24dp"/>

    <ScrollView
        android:layout_below="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/R1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:fontFamily="@font/happy_monkey"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Avinash K Arya"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:drawableEnd="@drawable/pencil1"
        android:layout_below="@+id/n"
        android:fontFamily="@font/happy_monkey"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@drawable/bg12"
        android:layout_marginLeft="20dp"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:layout_below="@+id/name"
        android:fontFamily="@font/happy_monkey"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/dob"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="07/01/1999"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_below="@+id/b"
        android:fontFamily="@font/happy_monkey"
        android:textSize="20sp"
        android:background="@drawable/bg12"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_below="@+id/dob"
        android:fontFamily="@font/happy_monkey"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:drawablePadding="8dp" />


    <TextView
        android:id="@+id/gender"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Male"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_below="@+id/g"
        android:fontFamily="@font/happy_monkey"
        android:textSize="20sp"
        android:drawableEnd="@drawable/down_arrow"
        android:background="@drawable/bg12"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_below="@+id/gender"
        android:fontFamily="@font/happy_monkey"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:drawablePadding="8dp" />


    <TextView
        android:id="@+id/username_profile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="kooldec_i"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_below="@+id/u"
        android:fontFamily="@font/happy_monkey"
        android:textSize="20sp"
        android:drawableEnd="@drawable/pencil1"
        android:background="@drawable/bg12"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@+id/username_profile"
        android:fontFamily="@font/happy_monkey"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:drawablePadding="8dp" />


    <TextView
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="avinash.coolrocks@gmail.com"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_below="@+id/e"
        android:fontFamily="@font/happy_monkey"
        android:textSize="20sp"
        android:background="@drawable/bg12"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:drawablePadding="8dp" />

            <TextView
                android:id="@+id/p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_below="@+id/email"
                android:fontFamily="@font/happy_monkey"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:drawablePadding="8dp" />


            <TextView
                android:id="@+id/phoneno"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="9422396875"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:layout_below="@+id/p"
                android:fontFamily="@font/happy_monkey"
                android:textSize="20sp"
                android:background="@drawable/bg12"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:layout_marginBottom="30dp"
                android:drawablePadding="8dp" />


            <RelativeLayout
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneno">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textColor="#000000"
                android:fontFamily="@font/happy_monkey"
                android:layout_marginTop="10dp"
                android:textSize="20sp"

                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:drawablePadding="8dp" />
                </RelativeLayout>

        </RelativeLayout>



    </ScrollView>



</RelativeLayout>