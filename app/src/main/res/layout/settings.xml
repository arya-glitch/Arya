<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:title="Settings"
        android:navigationIcon="@drawable/arrow_back_black_24dp"/>


<ScrollView
    android:layout_below="@+id/toolbar_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Details"
        android:fontFamily="@font/happy_monkey"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/pencil"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:layout_below="@+id/details"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/happy_monkey"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/person_001"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/safety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Safety and Privacy"
        android:fontFamily="@font/happy_monkey"
        android:layout_below="@+id/account"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/lock1"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:layout_below="@+id/safety"
        android:fontFamily="@font/happy_monkey"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/notification"
        android:drawablePadding="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_below="@id/notification"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/post_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Privacy"
        android:fontFamily="@font/happy_monkey"
        android:layout_below="@+id/notification"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/post_lock"
        android:drawablePadding="10dp" />
    <TextView
        android:id="@+id/comment_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:fontFamily="@font/happy_monkey"
        android:layout_below="@+id/post_setting"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/comment_setting"
        android:drawablePadding="8dp" />


    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_below="@+id/comment_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/help_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:layout_below="@+id/line"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/happy_monkey"
        android:drawableLeft="@drawable/help_icon1"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/guidlines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Community Guidlines"
        android:layout_below="@+id/help_profile"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/happy_monkey"
        android:drawableLeft="@drawable/pages"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About us"
        android:layout_below="@+id/guidlines"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/happy_monkey"
        android:drawableLeft="@drawable/about_us_setting"
        android:drawablePadding="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_below="@id/about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:layout_below="@+id/about"
        android:fontFamily="@font/happy_monkey"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/star"
        android:drawablePadding="8dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_below="@id/rate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rate"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/india"
            android:drawablePadding="10dp"
            android:fontFamily="@font/alike_angular"
            android:text="Made In India"
            android:textColor="#0091EA"
            android:textStyle="bold"
            android:textSize="25sp" />
    </RelativeLayout>

</ScrollView>


</RelativeLayout>