<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C4000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
        <RelativeLayout
            android:id="@+id/Rx"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/bg3"
            >
    <ImageView
        android:id="@+id/image_send"
        android:layout_width="match_parent"
        android:layout_height="00dp"
        app:srcCompat="@drawable/image"
        android:background="@drawable/bg3"></ImageView>

        <VideoView
            android:id="@+id/video_send1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="gone"

            ></VideoView>

        </RelativeLayout>
    <EditText
        android:background="@drawable/typetext"
        android:layout_below="@+id/Rx"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_send"
        android:hint="Write the description of image" />
    <ImageButton
        android:id="@+id/btn_send"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="400dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/sendcircle"></ImageButton>

    <ProgressBar
        android:id="@+id/progressBar7"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="179dp" />

    </RelativeLayout>


</RelativeLayout>