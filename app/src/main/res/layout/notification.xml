<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <Toolbar
            android:id="@+id/toolbar_notification"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:title="Notification"
            android:navigationIcon="@drawable/arrow_back_black_24dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_notification">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/R0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send Notification  For Posts"
                        android:fontFamily="@font/happy_monkey"
                        android:layout_marginTop="30dp"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:drawablePadding="8dp" />

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/R1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/R0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send Notification For Chats"
                        android:fontFamily="@font/happy_monkey"
                        android:layout_marginTop="30dp"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:drawablePadding="8dp" />

                    <Switch
                        android:id="@+id/switch2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/R2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/R1">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Send Notification For Firend Request"
                        android:fontFamily="@font/happy_monkey"
                        android:layout_marginTop="30dp"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:drawablePadding="8dp" />

                    <Switch
                        android:id="@+id/switch3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/R3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/R2">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Send Notification For Request Accepted"
                        android:fontFamily="@font/happy_monkey"
                        android:layout_marginTop="30dp"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:drawablePadding="8dp" />

                    <Switch
                        android:id="@+id/switch4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/R5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/R3">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Turn Off All Notifications"
                        android:fontFamily="@font/happy_monkey"
                        android:layout_marginTop="30dp"
                        android:textSize="20sp"
                        android:textColor="#D50000"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:drawablePadding="8dp" />

                    <Switch
                        android:id="@+id/switch5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>


</RelativeLayout>