<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person_black_24dp"
        android:id="@+id/profile_image_comment_adapter"
        app:civ_border_width="1dp"/>


        <TextView
            android:id="@+id/user_profile_name_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_toEndOf="@id/profile_image_comment_adapter"
            android:layout_toRightOf="@id/profile_image_comment_adapter"
            android:fontFamily="@font/cherry_cream_soda"
            android:text="@string/profile_name"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/time_comment"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/cherry_cream_soda"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_name_comment"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="50dp"


            android:background="@drawable/typetext1"
            android:fontFamily="@font/happy_monkey"
            android:text="nice pic"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </RelativeLayout>
</RelativeLayout>